<div class="content">
  <div id="login-area" class="login-area">
  <% if user_signed_in? %>
      <a class="logout top-button pull-right">log out</a>
      <a id="profile" class="top-button pull-right"><%= current_user.email %></a>
  <% end %>
  </div>
  <div class="row">
  	<div class="col-md-12">
  	  <h1 class="title">br
  	    <div class="button">
  	      <div class="triangle"></div>
  	    </div>
  	  wsin'</h1>
  	</div>
  	</div>  
<div id="search-area" class="search-area">
  <% if user_signed_in? %>
  	<div class="col-md-12">
  	<form class="navbar-form col-md-6 col-md-offset-3" role="search">
   	 	<div class="form-group">
      	<input type="text" class="form-control" placeholder="ex: I have 30 minutes for comedy">
    	</div>
  	</form>
  	</div>
  <% else %>

  <div class="col-md-12 col-md-offset-4">
	  	<form class="form-inline" role="form" id="login-form">
	  		<div class="form-group">
	    	<label class="sr-only" for="email">Email address</label>
	    		<input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
	    	<label class="sr-only" for="password">Password</label>
	    		<input type="password" class="form-control" id="password" name="password" placeholder="Password">
	    		</div>
	  		<button type="submit" class="btn" id="sign-in-button">Sign in</button>
			</form>
	  		<button type="button" class="btn btn-primary" id="sign-up-button" data-target="#sign-up-form" data-toggle="modal" >Sign up</button>
</div>

  <!-- Sign-Up Modal -->
  <div class="modal fade" id="sign-up-form" tabindex="-1" role="dialog" aria-labelledby="signUp" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span><span class="sr-only">
              Close
            </span>
          </button>
          <h4 class="modal-title" id="signUp">Sign up today</h4>
        </div>
      <div class="modal-body">
        <form class="form-horizontal" role="form" id="sign-up-data">
          <div class="form-group">
            <div class="col-sm-12">
              <input type="email" id="email" class="form-control" name="user[email]" placeholder="Email" required>
            </div>
          </div>
        <div class="form-group">
          <div class="col-sm-12">
            <input type="password" id="pass" class="form-control" name="user[password]" placeholder="Password">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <input type="password" id="pass_conf" class="form-control" name="user[password_confirmation]" placeholder="Password confirmation">
          </div>
        </div>
        <div class="form-group" required>
          <div class="col-sm-12">
            <h4>Which services to you have a subscription to?</h4>
            <label class="checkbox-inline">
              <input type="checkbox" name="provider[netflix]" id="netflixBox" value="netflix">
                netflix          
            </label>
            <label class="checkbox-inline">
              <input type="checkbox" name="provider[hbo]" id="hboBox" value="hbo">
                hbo          
            </label>
            <label class="checkbox-inline">
              <input type="checkbox" name="provider[hulu]" id="huluBox" value="hulu">
                hulu+          
            </label>
          </div>
        </div>
      </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" id="sign-up-submit" class="btn btn-primary">Sign up</button>
        </div>
      </form>
      </div>
    </div>
  </div>
  <% end %>
</div>
